// Task 10
const myArr = [2, 3, 4, 5, 6];
let total = 0;

for (let i = 0; i < myArr.length; i++) {
    total += myArr[i];
}

console.log(total);



// Task 11
const arr = [[1, 2], [3, 4], [5, 6]];

for (let i = 0; i < arr.length; i++) {
    for (let j = 0; j < arr[i].length; j++) {
        console.log(arr[i][j]);
    }
}



// Task 12
const arr = [[1, 2], [3, 4], [5, 6, 7]];
let product = 1;

for (let i = 0; i < arr.length; i++) {
    for (let j = 0; j < arr[i].length; j++) {
        product *= arr[i][j];
    }
}

console.log(product);




// Task 13
function removeVowels(word) {
    return word.replace(/[aeiouAEIOU]/g, '');
}

let inputWord = "regular expression"; 
let result = removeVowels(inputWord);
console.log(result);  



// Task 14
function convertToKilometers(meters) {
    let kilometers = meters / 1000; 

    if (kilometers === 1) {
        console.log(meters + " м. це " + kilometers + " км");
    } else {
        console.log(meters + " м. це " + kilometers.toFixed(3) + " км");
    }
}


convertToKilometers(1200); 
convertToKilometers(54); 
convertToKilometers(126); 
